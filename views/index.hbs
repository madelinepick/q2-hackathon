<h1>Language Visualizer</h1>
<h2>Another look at stack overlow's survey</h2>
<div class="middle">
  <button class="signup">Signup</button>
  <button class="login">Login</button>
</div>

  <div class="signupdisplay">
    <form action="/signup" method="post">
      <label for="username">Username</label><br>
      <input class="formputs" type="text" name="username"><br>
      <label for="password">Password</label><br>
      <input class="formputs password" type="text" name="password"><br>
      <label for="role">Role</label><br>
      <input type="radio" name="role" value="1">
      <label class="smaller" for="role">Student</label><br>
      <input type="radio" name="role" value="2">
      <label class="smaller" for="role">Full Stack</label><br>
      <input type="radio" name="role" value="3">
      <label class="smaller" for="role">Front End</label><br>
      <input type="radio" name="role" value="4">
      <label class="smaller" for="role">Back End</label><br>
      <input type="radio" name="role" value="5">
      <label class="smaller" for="role">Mobile</label><br>
      <input type="radio" name="role" value="6">
      <label class="smaller" for="role">Math and Data</label><br>
      <input type="submit" value="Sign Up">
    </form>
  </div>

  <div class="logindisplay">
    <form action="/login" method="post">
      <label for="username">Username</label><br>
      <input class="formputs" type="text" name="username"><br>
      <label for="password">Password</label><br>
      <input class="formputs password" type="text" name="password"><br>
      <input type="submit" value="Login">
    </form>
  </div>

<script type="text/javascript">

$(function() {
  $('.signup').on('click', function(){
    $('.signupdisplay').show( 500 );
    $('.logindisplay').css("display", "none");
    $('.signup').css("display", "none");
    $('.login').css("display", "none");
  })
  $('.login').on('click', function(){
    $('.logindisplay').show( 500 );
    $('.signupdisplay').css("display", "none");
    $('.login').css("display", "none");
    $('.signup').css("display", "none");
  })
  $(".password").on('keyup', function(){
        console.log('keyup');
  })
});
</script>
